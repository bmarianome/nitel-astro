---
import { Image, Picture } from "@astrojs/image/components";
import BgLightColorHero from "./BgLightColorHero.astro";
import IconoAnimado from "./IconoAnimado.astro";
import ContactanosButton from "./ContactanosButton.astro";
import VerAreasButton from "./VerAreasButton.astro";
import MapaCordobaDesktop from "../assets/MapaCordobaDesktop.astro";
import MapaCordobaMobile from "../assets/MapaCordobaMobile.astro";
---

<style>
  /* .animation-hero {
    @apply animate-[animation_.5s_forwards]
  } */

  @keyframes animation {

    0% {
      opacity: 0;
      transform: translateX(-30px);
    }
    
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>

<div class="relative isolate overflow-hidden">
  <svg
    class="hidden lg:inline-block absolute inset-0 -z-20 h-full w-full stroke-white/25 [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)]"
    aria-hidden="true"
  >
    <defs>
      <pattern
        id="983e3e4c-de6d-4c3f-8d64-b9761d1534cc"
        width="150"
        height="150"
        x="50%"
        y="-1"
        patternUnits="userSpaceOnUse"
      >
        <path d="M.5 200V.5H200" fill="none"></path>
      </pattern>
    </defs>
    <svg x="50%" y="-1" class="overflow-visible fill-gray-800/20">
      <path
        d="M-200 0h201v201h-201Z M600 0h201v201h-201Z M-400 600h201v201h-201Z M200 800h201v201h-201Z"
        stroke-width="0"></path>
    </svg>
    <rect
      width="100%"
      height="100%"
      stroke-width="0"
      fill="url(#983e3e4c-de6d-4c3f-8d64-b9761d1534cc)"></rect>
  </svg>

  <div class="hidden lg:inline-block">
    <BgLightColorHero />
  </div>

  <div
    class="mx-auto max-w-7xl px-6 pt-10 pb-16 sm:pb-32 lg:flex lg:py-32 lg:px-8 h-[100svh]"
  >
    <!-- DATOS -->
    <div class="mx-auto max-w-2xl flex-shrink-0 lg:mx-0 lg:max-w-xl">
      <!-- LOGO Y <NUEVO> -->
      <div class="flex justify-between lg:flex-col">
        <Picture
          class='opacity-0 animate-[animation_.5s_.25s_forwards]'
          src={import("../assets/logo-nitel-full-word.png")}
          fit="contain"
          loading={"eager"}
          widths={[320, 200]}
          sizes="(max-width: 620px) 200px, 320px"
          quality={100}
          format="webp"
          alt=""
        />
      </div>

      <div class="relative w-max h-max opacity-0 animate-[animation_.5s_.5s_forwards]" id='TituloHero'>
        <h1
          class="mt-8 lg:mt-10 text-5xl lg:text-7xl uppercase italic font-bold tracking-tight text-white sm:text-6xl w-max h-max"
        >
          Te conecta
        </h1>
        <div
          class="text-5xl lg:text-7xl uppercase italic font-bold tracking-tight text-white sm:text-6xl absolute inset-0 text-gradient animate-maps"
        >
          Te conecta
        </div>
      </div>

      <p
        class="mt-6 text-lg leading-8 text-gray-300 hidden lg:inline-block lg:mt-8"
      >
        Nitel es un proveedor de internet para Córdoba, de forma inalámbrica o
        con fibra óptica.
      </p>

      <div class="flex flex-col gap-6 lg:gap-10">
        <dl class="mt-8 space-y-4 text-base leading-7 text-gray-300">
          <div class="flex gap-x-4 lg:gap-x-6">
            <dt class="flex-none">
              <span class="sr-only">Dirección</span>
              <svg
                class="h-7 w-7 text-gray-400 lg:h-8 lg:w-8"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008z"
                ></path>
              </svg>
            </dt>
            <dd class="lg:text-lg">
              <span>Bv. Mitre 517 - Córdoba Capital</span>
            </dd>
          </div>

          <div class="flex gap-x-4 lg:gap-x-6 mt-4">
            <dt class="flex-none">
              <span class="sr-only">Email</span>
              <svg
                class="h-7 w-7 text-gray-400 lg:h-8 lg:w-8"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                ></path>
              </svg>
            </dt>
            <dd class="lg:text-lg">
              <a class="hover:text-white" href="mailto:comercial@nitel.com.ar"
                >comercial@nitel.com.ar</a
              >
            </dd>
          </div>

          <div class="flex gap-x-4 lg:gap-x-6 mt-4">
            <dt class="flex-none">
              <span class="sr-only">Teléfono</span>
              <svg
                class="h-7 w-7 text-gray-400 lg:h-8 lg:w-8"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                ></path>
              </svg>
            </dt>
            <dd class="lg:text-lg">
              <a class="hover:text-white" href="tel:+543516472777"
                >+54 351 647 2777</a
              >
            </dd>
          </div>
        </dl>
      </div>

      <!-- CONTACTANOS, VER ÁREAS DE COBERTURA, REDES SOCIALES -->
      <div class="mt-2 lg:mt-10 flex justify-between items-end">
        <div class="flex flex-col gap-6 lg:gap-10">
          <div class="flex gap-6 flex-col lg:flex-row lg:items-center">
            <ContactanosButton />
            <VerAreasButton />
          </div>

          <!-- REDES SOCIALES EN HERO -->
          <div class="flex">
            <IconoAnimado
              delay=".1s"
              parentClass="opacity-0 text-gray-400 hover:text-gray-500 mr-6"
            >
              <a href="https://www.facebook.com/nitelinternet">
                <span class="sr-only">Facebook</span>
                <svg
                  class="h-6 w-6"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
                    clip-rule="evenodd"></path>
                </svg>
              </a>
            </IconoAnimado>

            <IconoAnimado
              delay=".15s"
              parentClass="opacity-0 text-gray-400 hover:text-gray-500 mr-6"
            >
              <a href="https://www.instagram.com/nitelinternet/">
                <span class="sr-only">Instagram</span>
                <svg
                  class="h-6 w-6"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"
                    clip-rule="evenodd"></path>
                </svg>
              </a>
            </IconoAnimado>

            <IconoAnimado
              delay=".20s"
              parentClass="opacity-0 text-gray-400 hover:text-gray-500"
            >
              <a href="https://www.tiktok.com/@nitel_internet">
                <span class="sr-only">Instagram</span>
                <svg class="h6 w-6" viewBox="0 0 113 113" fill="currentColor">
                  <path
                    d="M85 17.625C85 17.625 88.1875 20.75 85 17.625C80.7277 12.7476 78.3732 6.48395 78.375 0H59.0625V77.5C58.9135 81.6939 57.1429 85.6664 54.1235 88.5809C51.1041 91.4953 47.0716 93.1244 42.875 93.125C34 93.125 26.625 85.875 26.625 76.875C26.625 66.125 37 58.0625 47.6875 61.375V41.625C26.125 38.75 7.25 55.5 7.25 76.875C7.25 97.6875 24.5 112.5 42.8125 112.5C62.4375 112.5 78.375 96.5625 78.375 76.875V37.5625C86.2062 43.1866 95.6085 46.204 105.25 46.1875V26.875C105.25 26.875 93.5 27.4375 85 17.625Z"
                  ></path>
                </svg>
              </a>
            </IconoAnimado>
          </div>
        </div>
        <div class="translate-y-3 lg:hidden">
          <MapaCordobaMobile />
        </div>
      </div>
    </div>

    <!-- FOTO CÓRDOBA -->
    <div
      class="mx-auto max-w-2xl hidden lg:inline-block lg:ml-10 lg:mt-0 lg:mr-0 lg:max-w-none"
    >
      <div class="w-full mt-6 lg:-mt-4 relative z-10 ml-20">
        <MapaCordobaDesktop />
      </div>
    </div>
  </div>
</div>
