---
import MapaCordobaMobile from "./assets/MapaCordobaMobile.astro";
import MedioDeContactoAnimado from "./content/MedioContactoAnimado";
import TituloAnimado from "./content/TituloAnimado";
import BgLightColor2 from "./content/bgLightColorContent";
import LineaEnContenido from "./content/LineaEnContenido";
import { Image, Picture } from "@astrojs/image/components";
---

<style>
  .map-width {
    width: 60%;
  }

  @media (min-width: 420px) {
    .map-width {
      /* width: 50%; */
    }
  }

</style>

<div class="-mb-4">
  <div class="mx-auto max-w-7xl pb-24 sm:px-6 sm:pb-32 lg:px-8 relative">

    

    <div
      class=" relative isolate px-6 pt-16 lg:shadow-2xl rounded-3xl sm:px-16 md:pt-24 lg:flex lg:gap-x-20"
    >
      
      <div class="relative">
        <!-- <div class="absolute right-0 bottom-0 map-width">
          <MapaCordobaMobile />
        </div> -->
        <div class="flex justify-between w-[33%]">
  
          
          <!-- widths={[320, 96]}
          sizes="(max-width: 620px) 96px, 320px" -->
          <Image
            src={import("./assets/logo-nitel.png")}
            loading={"eager"}
            quality={100}
            format="webp"
            alt=""
          />
          <!-- <MapaCordobaMobile /> -->
        </div>
      </div>

      <div
        class="mx-auto text-left lg:mx-0 lg:flex-auto lg:py-32 lg:text-left"
      >
        <h2
          class="text-2xl font-bold tracking-tight text-white sm:text-4xl mt-8"
        >
          Contáctate y nosotros te asesoramos para que tengas el plan que necesitas
        </h2>

        <div
          class="mt-10 flex items-center justify-center gap-x-6 lg:justify-start"
        >
          <a
            href="https://wa.me/+543516472777/?text=Hola, quiero realizar una consulta"
            class="w-full text-center gradient rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-gray-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
          >
            Contratar ahora
          </a>
        </div>
        <div class="mx-auto max-w-7xl lg:px-8 pt-16" id='AreasDeCobertura'>
          <div class="mx-auto max-w-2xl lg:mx-0">
            <h2 class="text-2xl font-bold tracking-tight text-white">
              Áreas de cobertura
            </h2>
          </div>
          <div
            class="mx-auto mt-8 sm:mt-16 grid max-w-2xl grid-cols-2 gap-8 text-base leading-7 sm:gap-y-16 lg:mx-0 lg:max-w-none"
          >
            <div>
              <h3 class="pl-6 font-semibold text-white relative">
                Zona Sur
                <span
                  class="inline-block absolute top-0 left-0 h-full w-[1px] gradient"
                ></span>
              </h3>
              <address class="pt-2 pl-6 not-italic text-gray-500 relative">
                <LineaEnContenido client:load duration={1} />

                <p>Los Cedros</p>
                <p>Villa Rivadavia</p>
                <p>Ruta N°5</p>
                <p>Ferreyra</p>
                <p>Manantiales</p>
                <p>Ruta N°19</p>
                <p>Distrito Sur</p>
              </address>
            </div>
            <div>
              <h3 class="pl-6 font-semibold text-white relative">
                Zona Norte
                <span
                  class="inline-block absolute top-0 left-0 h-full w-[1px] gradient"
                ></span>
              </h3>
              <address class="pt-2 pl-6 not-italic text-gray-500 relative">
                <LineaEnContenido client:load duration={2} />

                <p>Salsipuedes</p>
                <p>Rio Ceballos</p>
                <p>Villa Silvina</p>
                <p>Unquillo</p>
                <p>Mendiolaza</p>
                <p>Villa Allende</p>
              </address>
            </div>
          </div>
        </div>
      </div>

      <!-- <div class="relative mt-16 h-80 lg:mt-8">
        <img class="absolute left-0 top-0 w-[57rem] max-w-none rounded-md bg-white/5 ring-1 ring-white/10" src="https://tailwindui.com/img/component-images/dark-project-app-screenshot.png" alt="App screenshot" width="1824" height="1080">
      </div> -->
    </div>
  </div>
</div>
