---
import HeadTags from "../components/headTags.astro";
import WhatsappButtonFixed from "../components/WhatsappButtonFixed.astro";
import Content from "../components/content/Content.astro";
import Hero from "../components/hero/Hero.astro";
import CTA from "../components/CTA.astro";
import BgLightColorHero from "../components/hero/BgLightColorHero.astro";
---

<!DOCTYPE html>
<html lang="es">
  <HeadTags />

  <!-- animaciones -->
  <style is:global>
    #cba-shadow-mobile,
    #lineas-adelante-mobile,
    #cba-shadow-desktop,
    #lineas-adelante-desktop {
      @apply animate-maps;
    }

    #BgLightColorHero,
    #ContactanosButton {
      @apply animate-[opacity01_.5s];
    }
  </style>

  <body class="relative bg-gray-900">
    <WhatsappButtonFixed />

    <!-- <BgLightColorHero /> -->

    <div class="relative overflow-hidden">
      <div class="relative isolate overflow-hidden">

        <svg
          class="absolute lg:hidden inset-0 -z-20 h-full w-full stroke-white/25 [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)]"
          aria-hidden="true"
        >
          <defs>
            <pattern
              id="983e3e4c-de6d-4c3f-8d64-b9761d1534cc-1"
              width="150"
              height="150"
              x="50%"
              y="-1"
              patternUnits="userSpaceOnUse"
            >
              <path d="M.5 200V.5H200" fill="none"></path>
            </pattern>
          </defs>
          <svg x="50%" y="-1" class="overflow-visible fill-gray-800/20">
            <path
              d="M-200 0h201v201h-201Z M600 0h201v201h-201Z M-400 600h201v201h-201Z M200 800h201v201h-201Z"
              stroke-width="0"></path>
          </svg>
          <rect
            width="100%"
            height="100%"
            stroke-width="0"
            fill="url(#983e3e4c-de6d-4c3f-8d64-b9761d1534cc-1)"></rect>
        </svg>

        <svg id='BgLightColorHero' viewBox="0 0 1108 632" aria-hidden="true" class="lg:hidden absolute top-10 left-[calc(50%-4rem)] w-[69.25rem] max-w-none transform-gpu blur-3xl sm:left-[calc(50%-18rem)] lg:left-48 lg:top-[calc(50%-30rem)] xl:left-[calc(50%-24rem)]">
          <path fill="url(#175c433f-44f6-4d59-93f0-c5c51ad5566d-12)" fill-opacity=".2" d="M235.233 402.609 57.541 321.573.83 631.05l234.404-228.441 320.018 145.945c-65.036-115.261-134.286-322.756 109.01-230.655C968.382 433.026 1031 651.247 1092.23 459.36c48.98-153.51-34.51-321.107-82.37-385.717L810.952 324.222 648.261.088 235.233 402.609Z" />
          <defs>
            <linearGradient id="175c433f-44f6-4d59-93f0-c5c51ad5566d-12" x1="1220.59" x2="-85.053" y1="432.766" y2="638.714" gradientUnits="userSpaceOnUse">
              <stop stop-color="#4F46E5" />
              <stop offset="1" stop-color="#80CAFF" />
            </linearGradient>
          </defs>
        </svg>

        <Hero />
        <!-- <CTA /> -->
        <Content />
      </div>

      <!-- FOOTER -->
      <footer>
        <div
          class="mx-auto max-w-7xl pt-0 pb-8 sm:py-8 px-6 md:flex md:items-center md:justify-between lg:px-8"
        >
          <div class="flex justify-center space-x-6 md:order-2">
            <a
              href="https://www.facebook.com/nitelinternet"
              class="text-gray-400 hover:text-gray-500"
            >
              <span class="sr-only">Facebook</span>
              <svg
                class="h-6 w-6"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>

            <a
              href="https://www.instagram.com/nitelinternet/"
              class="text-gray-400 hover:text-gray-500"
            >
              <span class="sr-only">Instagram</span>
              <svg
                class="h-6 w-6"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>

            <a
              href="https://www.tiktok.com/@nitel_internet"
              class="text-gray-400 hover:text-gray-500"
            >
              <span class="sr-only">Instagram</span>
              <svg class="h6 w-6" viewBox="0 0 113 113" fill="currentColor">
                <path
                  d="M85 17.625C85 17.625 88.1875 20.75 85 17.625C80.7277 12.7476 78.3732 6.48395 78.375 0H59.0625V77.5C58.9135 81.6939 57.1429 85.6664 54.1235 88.5809C51.1041 91.4953 47.0716 93.1244 42.875 93.125C34 93.125 26.625 85.875 26.625 76.875C26.625 66.125 37 58.0625 47.6875 61.375V41.625C26.125 38.75 7.25 55.5 7.25 76.875C7.25 97.6875 24.5 112.5 42.8125 112.5C62.4375 112.5 78.375 96.5625 78.375 76.875V37.5625C86.2062 43.1866 95.6085 46.204 105.25 46.1875V26.875C105.25 26.875 93.5 27.4375 85 17.625Z"
                ></path>
              </svg>
            </a>
          </div>
          <div class="mt-8 md:order-1 md:mt-0">
            <p class="text-center text-xs leading-5 text-gray-500">
              &copy; 2023 Desarrollado por <a
                class="underline"
                href="https://bmariano.me">bmariano</a
              > & X Company. Todos los derechos reservados.
            </p>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
